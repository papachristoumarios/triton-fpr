<Interface>:
	BoxLayout:
		orientation: 'vertical'
		padding: 2*[30,40]
		spacing: 15
		Image:
			id: banner_image
			source: root.get_banner()
		BoxLayout:
			orientation: 'horizontal'
			Button:
				id: select_button
				text: 'Select An image'
				on_press: root.show_load()
			Button:
				id: capture_button
				text: 'Capture Image from Camera'
				on_press: root.capture_image()
			Button:
				text: 'Clear All'
				on_press: root.clear_all()
		
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Threshold 1'
			Slider:
				id: sl1
				range: (0,255)
				value: 0
				step: 1
			Label:
				text: str(sl1.value)
			Label:
				text: 'Threshold 2'
			Slider:
				id: sl2
				range: (0,255)
				value: 255
				step: 1
			Label:
				text: str(sl2.value)
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Mode'
			Spinner:
				id: modes_spinner
				values: ('BFORB', 'BFSIFT', 'SIFTH')
				size: (200, 50)
			Label:
				text: 'Homogeneity Control'
			CheckBox:
				id: cv_test_checkbox
			
		
		BoxLayout:
			orientation: 'horizontal'
			Button:
				text: 'Perform Spieces Identification'
				on_press: root.perform_identification2()
			Button:
				text: 'Perform Shape Analysis'
				on_release: root.perform_shape_analysis()
		Button:
			id: scripts_button
			text: 'Scripts'
			on_press: root.show_scripts_interface()
		Button:
			id: about_button
			text: 'About'
			on_press: root.show_about_dialog()
		Button:
			id: exit_button
			text: 'Exit'
			on_press: exit()
			
<LoadDialog>:
	BoxLayout:
		orientation: 'vertical'
		padding: 2*[30,40]
		FileChooserListView:
			id: load_filechooser
			multiselect: False
			path: root.get_home()
		BoxLayout:
			orientation: 'horizontal'
			spacing: 15
			padding: 2*[30,40]
			Button:
				id: load_button
				text: 'Load'
				on_press: root.load()
			Button:
				id: cancel_button
				text: 'Cancel'
				on_press: root.cancel()
		
<IdentifierInterface>:
	BoxLayout:
		orientation: 'horizontal'
		Image:
			source: root.get_source()
		BoxLayout:
			orientation: 'vertical'
			padding: 2*[30,40]
			spacing: 15
			Label:
				id: output_label
				text: root.get_artifacts()
			Button:
				id: morph_button
				text: 'Get Morphometrics'
				on_press: root.show_morphometrics()
			Button:
				id: gen_report_button
				text: 'Generate Report'
			Button:
				id: close_button
				text: 'Close'
				on_press: root.close()
			
<AboutDialog>
	BoxLayout:
		orientation: 'vertical'
		padding: 2*[30,40]
		spacing: 15
		Label:
			id: about_label
			text: root.get_about_text()
		Button:
			id: homepage_btn
			on_press: root.go_to_homepage()
			text: 'Visit homepage'
		Button:
			text: 'Close'
			on_press: root.close()
			
<ShapeAnalyzerInterface>:
	BoxLayout:
		orientation: 'horizontal'
		Image:
			id: shape_analyzed_image
			source: '/tmp/final_image.jpg'
			size: self.width, self.height
		BoxLayout:
			orientation: 'vertical'
			padding: 2*[30,40]
			spacing: 15
			Button:
				text: 'Save details as text'
				on_press: pass
			Button:
				text: "Draw extreme points' lines"
				on_press: root.draw_el()
			Button:
				text: "Draw morphometrics' lines"
				on_press: root.draw_ml()
			Button:
				text: "Draw Haar-like features"
				on_press: root.draw_haar_like_features()
			Button:
				text: 'Save'
				on_press: root.save()
			Button:
				text: 'Close'
				on_press: root.close()

<ScriptsInterface>
	orientation: 'vertical'
	padding: 2*[30,40]
	Spinner:
		id: scripts_spinner
		values: root.get_scripts()
		size: (200, 50)
	BoxLayout:
		orientation: 'horizontal'
		Label:
			text: 'Arguments'
		TextInput:
			id: args_textinput
	BoxLayout:
		orientation: 'horizontal'
		Button:
			text: 'Run'
			on_press: root.run_script()
		Button:
			text: 'Close'
			on_press: root.close()
		
