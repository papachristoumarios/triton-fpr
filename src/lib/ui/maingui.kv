<Interface>:
	BoxLayout:
		orientation: 'vertical'
		padding: 2*[30,40]
		spacing: 15
		BoxLayout:
			Image:
				id: banner_image
				source: root.get_banner()
			Label:
				text: 'Triton-FPR Project. HCMR 2014'
		BoxLayout:
			orientation: 'horizontal'
			Button:
				id: select_button
				text: 'Select An image'
				on_press: root.show_load()
			Button:
				text: 'Clear All'
				on_press: root.clear_all()
		BoxLayout:
			orientation: 'horizontal'
			Button:
				text: 'Perform Spieces Identification'
				on_press: root.perform_identification()
			Button:
				text: 'Perform Shape Analysis'
				on_release: root.perform_shape_analysis()
		Button:
			id: about_button
			text: 'About'
			on_press: root.show_about_dialog()
		Button:
			id: exit_button
			text: 'Exit'
			on_press: exit()
			
<LoadDialog>:
	BoxLayout:
		orientation: 'vertical'
		padding: 2*[30,40]
		TextInput:
			id: load_text_input
		BoxLayout:
			orientation: 'horizontal'
			spacing: 15
			padding: 2*[30,40]
			Button:
				id: load_button
				text: 'Load'
				on_press: root.load()
			Button:
				id: cancel_button
				text: 'Cancel'
				on_press: root.cancel()
		
<IdentifierInterface>:
	BoxLayout:
		orientation: 'vertical'
		padding: 2*[30,40]
		spacing: 15
		Image:
			source: selected_image_filename
		Label:
			text: 'Fish Name'
			size: 18
		Label:
			text: 'Identification Output'
		Label:
			id: output_label
			text: root.get_artifacts()
		Button:
			id: morph_button
			text: 'Get Morphometrics'
			on_press: root.show_morphometrics()
		Button:
			id: gen_report_button
			text: 'Generate Report'
		Button:
			id: close_button
			text: 'Close'
			on_press: identifier_interface_popup.dismiss()
			
<AboutDialog>
	BoxLayout:
		orientation: 'vertical'
		padding: 2*[30,40]
		spacing: 15
		Label:
			id: about_label
			text: root.get_about_text()
		Button:
			id: homepage_btn
			on_press: root.go_to_homepage()
			text: 'Visit homepage'
		Button:
			text: 'Close'
			on_press: root.close()
			
<ShapeAnalyzerInterface>:
	BoxLayout:
		orientation: 'horizontal'
		Image:
			id: shape_analyzed_image
			source: '/tmp/final_image.jpg'
			size: self.width, self.height
		BoxLayout:
			orientation: 'vertical'
			padding: 2*[30,40]
			spacing: 15
			Button:
				text: 'Refresh'
				on_press: root.refresh()
			Button:
				text: 'Save details as text'
				on_press: pass
			Button:
				text: "Draw extreme points' lines"
				on_press: root.draw_el()
			Button:
				text: "Draw morphometrics' lines"
				on_press: root.draw_ml()
			Button:
				text: 'Close'
				on_press: root.close()
